<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.views.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='crm']/block[2]" position="inside">
                <setting help="Make lead probability computation manually base probability from the stage.">
                    <field name="crm_manual_compute_probability"/>
                </setting>
            </xpath>
        </field>
    </record>    

</odoo>
